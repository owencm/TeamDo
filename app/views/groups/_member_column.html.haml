.member-column
  .member-header.column-row
    -if current_user
      You
    - else 
      =member.first
  .section-header.column-row
    .title
      Past Tasks
    .action
      = image_tag "older-icon.png" 
      View Older
    .clear
  .section-header.column-row
    .title
      Current Tasks
    .action
      = image_tag "add-icon.png" 
      Add
    .clear
  -for task in member.to_me_tasks
    .column-row.task.pending
      .contents
        =task.title
      .arrow
        >
      .clear
  .new-task-btn-container
    .new-task-btn.btn.btn-primary
      New Task