<p>
  <b>Title:</b>
  <%= @task.title %>
</p>

<p>
  <b>Description:</b>
  <%= @task.description %>
</p>

<p>
  <b>Due by:</b>
  <%= @task.due_by %>
</p>

<p>
  <b>Assigned by:</b>
  <%= @setter.first %>
</p>

<p>
  <b>Assigned to:</b>
  <ul>
  <% @doers.each do |doer| %>
    <li><%= doer.first %></li>
  <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_task_path(@task), :class => "btn btn-primary" %> |
<%= link_to 'Back', group_path(@task.group) %>
