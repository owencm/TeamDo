<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div><br />
  <div class="field">
    <%= f.label :group %>
    <%= f.text_field :group, :value => @group_id %>
  </div><br />
  <div class="field">
    <%= f.label :doers, "Assigned to" %>
    <%= f.text_field :doers, :style => "display: none", :id => "task-doers" %>  
    <ul class="user-check-list">
      <% if !@group_users.nil? then
          @group_users.each do |user| %>
          <li><input type="checkbox" class="user-check"  user="<%= user.id %>" id="user-check-<%= user.id %>"
            <% if @task.doers.include?(user) %> checked=true <% end %> >
            <label for="user-check-<%= user.id %>" class="check-box-label"> <%= user.first + " " + user.last %></label>
          </li>
      <% end 
      end %>
    </ul>
  </div><br />
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, :rows => 5 %>
  </div><br />
  <div class="field">
    <%= f.label :due_by %>
    <%= f.text_field :due_by %>
  </div><br />
  <div class="actions">
    <%= f.submit :class => "btn-primary" %>
  </div>
<% end %>
