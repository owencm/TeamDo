<h1>Listing users</h1>

<table class="table table-bordered" style="width: 800px">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Username</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to "#{user.first} #{user.last}", user %></td>
    <td><%= user.email %></td>
    <td><%= user.username %></td>
    <td><%= link_to 'Edit', edit_user_path(user), :class => "btn" %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete, :class => "btn btn-danger" %></td>
  </tr>
<% end %>
</table>

<%= link_to 'New User', new_user_path, :class => "btn btn-primary" %>